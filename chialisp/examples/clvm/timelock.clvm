(mod (SOURCE_PUZHASH TARGET_PUZHASH AMOUNT SECONDS puzhash)
  (if (= SOURCE_PUZHASH puzhash)
    (list ;; Originator can recover or spend until the coin is spent by other person.
      (list 51 SOURCE_PUZHASH AMOUNT)
    )
    (list
      (list 80 SECONDS)
      (list 51 TARGET_PUZHASH AMOUNT)
    )
  )
)